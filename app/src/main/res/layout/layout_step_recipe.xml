<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_step_card_view"
    android:layout_width="@dimen/details_step_card_view_width"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/pink_red"
    app:cardElevation="@dimen/details_step_card_view_elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/step_short_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/step_short_description_text_view_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/step_short_description_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/step_long_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/step_long_description_text_view_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/step_short_description_text_size"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.v7.widget.CardView>
